<form class="myForm form-horizontal" id="myForm" method="POST" action="/signup">
  <fieldset>
    <legend> Sign-Up Form </legend>
            <div class="form-group">
                <label class="control-label col-sm-1"> First Name </label>
                <input class="inputs" type="text" name="firstName" placeholder="Enter your First Name" />
             </div>
            <div class="form-group">
                <label class="control-label col-sm-1"> Last Name </label>
                <input class="inputs" type="text" name="lastName" placeholder="Enter your Last Name" />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-1"> Email </label>
                <input class="inputs" type="text" name="email" placeholder="Enter your email" onfocus="clearError(this)" />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-1"> Phone </label>
                <input class="inputs" type="text" name="phone" placeholder="Enter your phone" onfocus="clearError(this)" />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-1"> Password </label>
                <input class="inputs" type="password" name="password" placeholder="Enter your password" />
            </div>
            <button type="submit" class="btn btn-default" onclick="submitForm()"> Submit </button>
      </fieldset>
</form>
